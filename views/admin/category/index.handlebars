<h1>Categorias</h1>

<form method="post" action="/admin/category/create">
  <div class="form-group">
    <label for="exampleInputEmail1">Category Name</label>
    <input type="text" name="name" class="form-control" placeholder="Enter cateogry">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<h1>Category Lists:</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each Categories}}
    <tr>
      <td>{{id}}</td>
      <td>{{name}}</td>
      <td><a class="btn btn-info" href="/admin/category/edit/{{id}}">Edit</a></td>
      <td><a class="btn btn-danger" href="/admin/category/delete/{{id}}">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
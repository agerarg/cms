<h1>Comments</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Owner</th>
       <th scope="col">Approve</th>
      <th scope="col">Body</th>
    </tr>
  </thead>
  <tbody>
      {{#each coments}}
    <tr>
      <td>{{id}}</td>
      <td>{{user.firtsName}}</td>
      <td><input data-id="{{id}}" {{#if approve}} checked {{/if}} type="checkbox" name="ApproveComment"></td>
      <td>{{body}}</td>
      <td><a class="btn btn-danger" href="/admin/comment/delete/{{id}}">Delete</a></td>
    </tr>
   {{/each}}
  </tbody>
</table>
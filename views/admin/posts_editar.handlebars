<div>
<h1>Editar Posts</h1>
</div>
<form action="/admin/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data" >
<div  class="form-group">Titulo:
<div>
<input class="form-control" value="{{post.title}}" type="text" id="titulo" name="titulo">
</div>
<div  class="form-group">Archivo:
<div>
<input class="form-control" type="file" id="file" name="file">
</div>
<div  class="form-group">Estatus:
<div>
<select class="form-control" id="estatus" name="estatus">
    {{#select post.status}}
    <option value="publico">Publico</option>
    <option value="privado">Privado</option>
    <option value="draf">Draf</option>
    {{/select}}
    </select>
</div>
<div  class="form-group">Categoria:
<div>
<select class="form-control" id="category" name="category">
     {{#select post.category}}
        {{#each categories}}
        <option value="{{id}}">{{name}}</option>
    {{/each}}
    {{/select}}
    </select>
</div>
<div class="form-group">Body:
<div>
<input type="text" value="{{post.body}}" class="form-control" id="body" name="body" size="20px">
</div>

<div class="form-group">
<button type="submit">Enviar</button>
</div>
</form>